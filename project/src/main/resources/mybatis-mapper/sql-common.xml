<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.test1.common.mapper.CommonMapper">
	<select id="selectMenuList" parameterType="hashmap" resultType="com.example.test1.common.model.Menu">
		SELECT *
		FROM TBL_MENU
		WHERE 1=1
		<if test="depth == 1">
			AND DEPTH = 1
		</if>
		<if test="depth == 2">
			AND DEPTH = 2
		</if>
	</select>
</mapper>